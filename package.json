    "pg": "8.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
