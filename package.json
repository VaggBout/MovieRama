{
  "name": "movierama",
  "version": "0.0.1",
  "description": "A social sharing platform where users can share their favorite movies",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf dist/",
    "postbuild": "cp -r src/views public dist/src/ && cp .env dist/",
    "start": "node dist/src/server.js",
    "start:dev": "nodemon src/server.ts",
    "test": "jest --coverage --detectOpenHandles",
    "test:integration": "ENV=integration jest --coverage --detectOpenHandles --config=jest.config.integration.ts",
    "docker:build": "tsc",
    "postdocker:build": "cp -r src/views public dist/src/",
    "predocker": "./scripts/wait-for.sh db:5432 -- npm run migrate -- --config db-migrate.json",
    "docker": "node src/server.js",
    "migrate": "db-migrate up",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "husky:install": "husky install"
  },
  "author": "Vaggelis Boutas",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "db-migrate": "0.11.13",
    "db-migrate-pg": "1.2.2",
    "dotenv": "16.0.3",
    "ejs": "3.1.8",
    "express": "4.18.2",
    "joi": "17.8.3",
    "jsonwebtoken": "^9.0.0",
    "luxon": "^3.3.0",
    "pg": "8.10.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/jsdom": "^21.1.0",
    "@types/jsonwebtoken": "9.0.1",
    "@types/luxon": "^3.2.0",
    "@types/node": "18.15.0",
    "@types/pg": "8.6.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "nodemon": "2.0.21",
    "prettier": "2.8.4",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.{js,json,md,ts}": "prettier --check",
    "*.ts": "eslint --quiet"
  }
}
